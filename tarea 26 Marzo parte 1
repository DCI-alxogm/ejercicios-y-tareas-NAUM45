/*TAREA del dia 26 marzo funciones exponenciales*/
#include <stdio.h>
#include <math.h>

int main() { 
    float inicio, fin, paso;

    printf("Ingrese el valor inicial del intervalo: ");
    scanf("%f", &inicio);

    printf("Ingrese el valor final del intervalo: ");
    scanf("%f", &fin);

    printf("Ingrese el paso: ");
    scanf("%f", &paso);

    printf("%-10s %-10s %-10s %-10s %-10s %-10s\n", "x", "exp(x)", "log(x)", "sin(x)", "cos(x)", "sqrt(x)");
    
    for (float x = inicio; x < fin + paso; x += paso) {
        printf("%-10.2f %-10.2f %-10s %-10.2f %-10.2f %-10s\n", 
               x, exp(x), (x > 0 ? "%.2f" : "NaN"), sin(x), cos(x), (x >= 0 ? "%.2f" : "NaN"));
    }

    return 0;
}
